# ==============================================
# EMAIL INFRASTRUCTURE - ENVIRONMENT VARIABLES
# ==============================================

# Application Environment
NODE_ENV="development"
PORT=3000

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/emailinfra"

# NextAuth.js Authentication
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-super-secret-key-here-change-in-production-min-32-chars"

# ==============================================
# RESEND API INTEGRATION (REQUIRED)
# ==============================================
# Get your API key from: https://resend.com/api-keys
RESEND_API_KEY="re_xxxxxxxxxx_your_resend_api_key_here"

# Email Configuration
FROM_EMAIL="noreply@yourdomain.com"
REPLY_TO_EMAIL="support@yourdomain.com"

# Email Templates & Branding
COMPANY_NAME="Your Company Name"
COMPANY_LOGO_URL="https://yourdomain.com/logo.png"
SUPPORT_EMAIL="support@yourdomain.com"

# Email Rate Limiting (Resend limits)
EMAIL_RATE_LIMIT_PER_HOUR=100
EMAIL_RATE_LIMIT_PER_DAY=1000

# ==============================================
# OAUTH PROVIDERS (OPTIONAL)
# ==============================================
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
GITHUB_CLIENT_ID="your-github-client-id"
GITHUB_CLIENT_SECRET="your-github-client-secret"

# ==============================================
# REDIS CACHE (RECOMMENDED FOR PRODUCTION)
# ==============================================
REDIS_URL="redis://localhost:6379"
REDIS_PASSWORD=""
REDIS_DB=0

# ==============================================
# SECURITY & PERFORMANCE
# ==============================================
# CORS Configuration
ALLOWED_ORIGINS="http://localhost:3000,https://yourdomain.com"
TRUSTED_HOSTS="localhost,yourdomain.com"

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_REQUESTS_PER_HOUR=1000

# Session Configuration
SESSION_MAX_AGE=2592000
SESSION_UPDATE_AGE=86400

# ==============================================
# MONITORING & ANALYTICS (OPTIONAL)
# ==============================================
# Disable Next.js telemetry
NEXT_TELEMETRY_DISABLED=1

# Error Tracking (e.g., Sentry)
# SENTRY_DSN="your-sentry-dsn"
# SENTRY_ENVIRONMENT="development"

# Analytics
# GOOGLE_ANALYTICS_ID="GA-XXXXXXXXX"
# MIXPANEL_TOKEN="your-mixpanel-token"

# ==============================================
# WEBHOOK CONFIGURATION (OPTIONAL)
# ==============================================
# Resend Webhook Secret (for email event tracking)
# RESEND_WEBHOOK_SECRET="your-webhook-secret"
# WEBHOOK_URL="https://yourdomain.com/api/webhooks/resend"

# ==============================================
# FEATURE FLAGS (OPTIONAL)
# ==============================================
ENABLE_EMAIL_VERIFICATION=true
ENABLE_PASSWORD_RESET=true
ENABLE_NEWSLETTER=true
ENABLE_NOTIFICATIONS=true
ENABLE_ADMIN_PANEL=true

# ==============================================
# DEVELOPMENT TOOLS
# ==============================================
# Database Tools
ENABLE_PRISMA_STUDIO=true
DATABASE_LOGGING=false

# Email Testing (for development)
EMAIL_PREVIEW_MODE=false
EMAIL_LOG_TO_CONSOLE=true