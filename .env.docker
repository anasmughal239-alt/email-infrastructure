# Docker Environment Configuration for Email Infrastructure
# Copy this file to .env and update the values for your deployment

# Database Configuration
POSTGRES_PASSWORD=secure_postgres_password_change_in_production
DATABASE_URL=postgresql://emailinfra_user:secure_postgres_password_change_in_production@postgres:5432/emailinfra

# Redis Configuration
REDIS_PASSWORD=redis_password_change_in_production
REDIS_URL=redis://:redis_password_change_in_production@redis:6379

# NextAuth.js Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-super-secret-nextauth-key-change-in-production-min-32-chars

# OAuth Providers (Optional - leave empty if not using)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# Email Service Configuration
RESEND_API_KEY=your-resend-api-key-here
FROM_EMAIL=noreply@yourdomain.com

# Security Configuration
NODE_ENV=production
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com
TRUSTED_HOSTS=localhost,yourdomain.com

# Optional: Monitoring Configuration
GRAFANA_PASSWORD=admin_password_change_in_production

# Production SSL Configuration (for nginx)
# SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
# SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Application Configuration
PORT=3000
NODE_OPTIONS=--max-old-space-size=1024

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session Configuration
SESSION_MAX_AGE=86400
SESSION_UPDATE_AGE=3600

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp

# Email Template Configuration
EMAIL_TEMPLATE_DIR=/app/templates
DEFAULT_LOCALE=en

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=5000
HEALTH_CHECK_INTERVAL=30000

# Performance Configuration
CACHE_TTL=3600
STATIC_CACHE_TTL=86400
API_TIMEOUT=30000

# Development Configuration (set to false in production)
DEBUG=false
NEXT_TELEMETRY_DISABLED=1